{
  "expo": {
    "name": "Redarbor Jobs",
    "slug": "redarbor-jobs",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "redarborjobs",
    "platforms": ["ios", "android"],
    "jsEngine": "hermes",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.redarbor.jobs"
    },
    "android": {
      "package": "com.redarbor.jobs",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/splash-icon.png",
        "backgroundColor": "#ffffff",
        "dark": {
          "foregroundImage": "./src/assets/splash-icon-white.png",
          "backgroundColor": "#121212"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./src/assets/splash-icon.png",
          "resizeMode": "contain",
          "dark": {
            "image": "./src/assets/splash-icon-white.png",
            "backgroundColor": "#121212"
          },
          "imageWidth": 200
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
